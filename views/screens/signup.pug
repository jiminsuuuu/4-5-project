doctype html
html(lang="en")
    head
        meta(charset="UTF-8")
        meta(http-equiv="X-UA-Compatible", content="IE=edge")
        meta(name="viewport", content="width=device-width, initial-scale=1.0")
        title Document
        link(rel="stylesheet", href="/css/styles.css")
    body 
        form(action="/login/signup/check" method="POST")
            div
                label(htmlFor="email") 이메일 주소 
                input(type="email" name="email" id="email" placeholder="이메일을 입력해주세요." required)
            div
                label(htmlFor="password") 비밀번호 
                input(type="password" name="password" id="password" placeholder="비밀번호을 입력해주세요." required)
            div
                label(htmlFor="name") 이름
                input(type="text" name="name" id="name" placeholder="이름을 입력해주세요." required)

            div
                label(htmlFor="phone_number") 전화번호
                input(type="tel" name="phone_number" id="phone_number" placeholder="전화번호 입력해주세요." required)
            input(type="submit" value="회원가입하기")
